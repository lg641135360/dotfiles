[global]
    # Display position
    monitor = 0
    follow = mouse
    # Geometry (for dunst 1.5.0)
    # Format: "widthxheight-x_offset+y_offset"
    geometry = "300x5-20+50"
    # Shrink window if message is shorter
    shrink = yes
    # Notification timeout (seconds in 1.5.0)
    timeout = 5
    # Font
    font = WenQuanYi Zen Hei 12
    # Frame
    frame_width = 2
    frame_color = "#61afef"
    # Background and foreground
    background = "#282c34"
    foreground = "#abb2bf"
    # Icon
    icon_position = left
    max_icon_size = 32
    # Format
    markup = full
    format = "<b>%s</b>\n%b"
    # Transparency (0-100)
    transparency = 10
    # Padding
    horizontal_padding = 8
    padding = 8
    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

